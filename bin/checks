#!/usr/bin/env bash

echo "Running: isort"
isort --quiet src

echo "Running: black"
black --quiet src

echo "Running: flake8"
flake8 src

echo "Running: mypy"
mypy --no-error-summary --strict src

echo "Running: pylint"
pylint --score=n src

# echo "Running: pytest/coverage"
# coverage run -m pytest --quiet
# coverage html

echo "Done"
